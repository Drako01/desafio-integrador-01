<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">

	<display-name>Archetype Created Web Application</display-name>

	<servlet>
		<servlet-name>ListarPeliculasServlet</servlet-name>
		<servlet-class>com.educacionit.servlets.ListarPeliculasServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ListarPeliculasServlet</servlet-name>
		<url-pattern>/ListarPeliculasServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>AgregarPeliculaServlet</servlet-name>
		<servlet-class>com.educacionit.servlets.AgregarPeliculaServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>AgregarPeliculaServlet</servlet-name>
		<url-pattern>/AgregarPeliculaServlet</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>PeliculasManagerServlet</servlet-name>
		<servlet-class>com.educacionit.servlets.PeliculasManagerServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>PeliculasManagerServlet</servlet-name>
		<url-pattern>/PeliculasManagerServlet</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>BuscarPeliculasServlet</servlet-name>
		<servlet-class>com.educacionit.servlets.BuscarPeliculasServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BuscarPeliculasServlet</servlet-name>
		<url-pattern>/BuscarPeliculasServlet</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>EliminarPeliculaServlet</servlet-name>
		<servlet-class>com.educacionit.servlets.EliminarPeliculaServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>EliminarPeliculaServlet</servlet-name>
		<url-pattern>/EliminarPeliculaServlet</url-pattern>
	</servlet-mapping>

</web-app>
